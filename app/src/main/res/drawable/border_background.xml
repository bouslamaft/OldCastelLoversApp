<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:top="4dp" android:right="4dp" android:left="4dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/lightGray" /> <!-- Background color -->
            <corners android:radius="8dp" /> <!-- Corner radius -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="10dp" android:color="@color/lightGray" /> <!-- Border color -->
            <corners android:radius="8dp" /> <!-- Corner radius -->
        </shape>
    </item>
</layer-list>
