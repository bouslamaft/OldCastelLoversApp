<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/summaryText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="LeÅ›nica Castle"
        android:textSize="16sp"
        />

    <View
        android:id="@+id/grayLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@id/summaryText"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/accessibilityText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Accessibility"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_below="@id/grayLine"/>

    <!-- res/layout/fragment_about.xml -->
    <ImageView
        android:id="@+id/accessibilityIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/done_icon"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_below="@id/accessibilityText" />


    <TextView
        android:id="@+id/wheelchairAccessibleEntrance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Wheelchair-accessible entrance"
        android:textSize="16sp"
        android:layout_below="@id/accessibilityText"
        android:layout_toEndOf="@id/accessibilityIcon"/>

</RelativeLayout>
